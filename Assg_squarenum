class point :                                       #create a class  
    
    def __init__(self,num1,num2,num3):             # creating constructor and defining the properties
        self.num1 = num1
        self.num2 = num2
        self.num3 = num3
        
    def sqsum(self):                                 # creating method which will call class for the attributes then square it 
        a = self.num1**2
        b = self.num2**2
        c = self.num3**2
        
        return a+b+c                               # return addition of square of the number 
     

x = int(input('Enter the first number: '))         #user defined object variables
y = int(input('Enter the first number: '))
z = int(input('Enter the first number: '))

obj1 = point(x,y,z)                                

print('square and sum is :', obj1.sqsum())
