class calculator:               # creating class calculator
    
    def __init__(self,num1,num2):  # declaring the contructor with two attributes 
        self.num1 = num1
        self.num2 = num2
    
    
    def add(self):              # method to add two numbers
        return self.num1 + self.num2
    
    def subtract(self):           # method to subtract two numbers
        return self.num2 - self.num1
    
    def multiply(self):             # method to multiply two numbers
        return self.num1 * self.num2    
    
    def divide(self):             # method to devide two numbers
        return self.num2 / self.num1
    
    
x = int(input('enter the number 1: '))   # user input number 1 & 2
y= int(input('enter the number 1: '))

cal1 = calculator(x,y)                # creating the object with user given input

print(cal1.add())                     # prinitng the requesting method calls as per given task
print(cal1.subtract())
print(cal1.multiply())
print(cal1.divide())
